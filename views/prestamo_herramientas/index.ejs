<%- include ../layouts/cabecera.ejs %>

<div style="background-color: #3080c5; padding: 20px; min-height: 100vh;">
    <!-- Fondo de color azul claro que cubre toda la pÃ¡gina -->
    <br/>
    <br/>
    <a href="/libros/crear" class="btn btn-primary" type="button" style="background-color: #007bff; color: #fff; padding: 10px 20px; border-radius: 5px; text-decoration: none;">Crear un Nuevo Registro</a>
    <br/>
    <br/>

    <div style="background-color: #ffffff; padding: 20px; border-radius: 10px; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);">
        <table class="table table-light" style="width: 100%; margin-top: 20px; border-collapse: collapse;">
            <thead class="thead-light" style="background-color: #007bff; color: white;">
                <tr>
                    <th style="padding: 10px; border-bottom: 1px solid #ddd; text-align: center;">#</th>
                    <th style="padding: 10px; border-bottom: 1px solid #ddd; text-align: center;">Nombre</th>
                    <th style="padding: 10px; border-bottom: 1px solid #ddd; text-align: center;">Imagen</th>
                    <th style="padding: 10px; border-bottom: 1px solid #ddd; text-align: center;">Acciones</th>
                </tr>
            </thead>
            <tbody>

                <% for(let libro = 0; libro < libros.length; libro++) { %>

                    <tr style="background-color: #f5f5f5;">
                        <td style="padding: 10px; border-bottom: 1px solid #ddd; text-align: center;"> <%=libros[libro].id %> </td>
                        <td style="padding: 10px; border-bottom: 1px solid #ddd; text-align: center;"> <%=libros[libro].nombre%> </td>
                        <td style="padding: 10px; border-bottom: 1px solid #ddd; text-align: center;">
                            <img class="img-thumbnail" width="100" src="images/<%=libros[libro].imagen%>" alt="" style="border-radius: 10px;">
                        </td>
                        <td style="padding: 10px; border-bottom: 1px solid #ddd; text-align: center;">
                            <div class="btn-group" role="group" aria-label="Button group">
                                <form method="get" action="/libros/Editar/<%=libros[libro].id %>" style="display: inline;">
                                    <button class="btn btn-warning" type="submit" style="background-color: #ffc107; color: #fff; padding: 10px 20px; border-radius: 5px; margin-right: 5px;">Editar</button>
                                </form>
                                <form method="post" action="/libros/eliminar/<%=libros[libro].id %>" style="display: inline;">
                                    <button class="btn btn-danger" type="submit" style="background-color: #dc3545; color: #fff; padding: 10px 20px; border-radius: 5px;">Borrar</button>
                                </form>
                            </div>
                        </td>
                    </tr>

                <% } %>

            </tbody>
        </table>
    </div>
</div>


