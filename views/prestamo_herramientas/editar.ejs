<%- include ../layouts/cabecera.ejs %>
<br/>
<br/>

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card" style="width: 50%; box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2); border-radius: 10px;">
        <div class="card-header" style="background-color: #007bff; color: white; font-weight: bold; font-size: 20px; border-top-left-radius: 10px; border-top-right-radius: 10px; text-align: center;">
            Formulario de Captura
        </div>
        <div class="card-body" style="padding: 30px;">
            <h5 class="card-title" style="font-size: 22px; font-weight: bold; color: #007bff; text-align: center;">Editar Datos de la Herramienta</h5>
            <p class="card-text">

                <form method="post" action="../actualizar/" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<%=libro.id%>">
            
                    <div class="form-group">
                        <label for="my-input" style="font-weight: bold; font-size: 16px;">Nombre:</label>
                        <input id="my-input" value="<%=libro.nombre%>" class="form-control" type="text" name="nombre" style="border-radius: 5px; border: 1px solid #ddd; padding: 10px;">
                    </div>
            
                    <div class="form-group">
                        <label for="my-input" style="font-weight: bold; font-size: 16px;">Imagen:</label>
                        <img class="img-thumbnail" src="../../images/<%=libro.imagen%>" width="100" alt="" style="border-radius: 10px; margin-bottom: 10px;">
                        <input id="my-input" class="form-control-file" type="file" name="archivo" style="border-radius: 5px; padding: 10px;">
                    </div>
            
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-success" type="submit" style="background-color: #28a745; color: white; padding: 10px 20px; border-radius: 5px; width: 48%;">Actualizar</button>
                        <a class="btn btn-primary" href="/libros" style="background-color: #007bff; color: white; padding: 10px 20px; border-radius: 5px; width: 48%; text-align: center;">Cancelar</a>
                    </div>
                </form>

            </p>
        </div>
    </div>
</div>

