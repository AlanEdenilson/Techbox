        <tbody>
            <% if (typeof estud !== 'undefined') { %>
             
            
            <% for( let estudiantes = 0; estudiantes < estud.length; estudiantes++ ) { %>
                <tr>
            <td><%=estud[estudiantes].id_estudiante  %></td>
