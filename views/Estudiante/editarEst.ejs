<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        $(function () {
            const renderedValue = '<%= typeof value !== "undefined" ? value : "" %>';
            console.log(renderedValue)
            $.ajax({
            url: '/One_T/buscarporidE?id='+renderedValue,
            type: 'GET',
            success: function(data){
                console.log(data.id)
                $('#id').val(data[0].id)
                $('#estudiante').val(data[0].nombre)
                $('#apellido').val(data[0].apellido)
                $('#gmail').val(data[0].correo)
                $('#nie').val(data[0].nie)
             
                
            },
            error: function(error){
                console.log(error)
            }
        });
            
        })
    </script>
    

                    